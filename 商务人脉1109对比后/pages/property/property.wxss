.content{width: 100%;height: 100%;display: flex;flex-direction: column;justify-content: center;}
.login-header{width: 100%;height: 500rpx;display: flex;align-items: center;justify-content: center;}
.header-section{width: 150rpx;height: 200rpx;display: flex;flex-direction: column;align-items: center;justify-content: center;}
.loginImg{width: 100rpx;height: 100rpx;border-radius: 50%;background: #ffffff}
.loginText{font-size: 30rpx;margin-top: 20rpx;}
.login-center{height: 100rpx;display: flex;flex-direction: column;box-sizing: border-box;padding-left: 30rpx;}
.centerText1{margin-top: 20rpx;font-size: 24rpx;}
.centerText2{margin-top: 20rpx;font-size: 22rpx;color: #999999;}
.login-btn{width: 710rpx;height: 88rpx;line-height: 88rpx;text-align: center;color: #ffffff;font-size: 28rpx;background: #3f9029;display: block;margin: 0 auto;border-radius: 10px;margin-top: 20rpx;}


/*位置css*/
.login-centers{height: 100rpx;display: flex;flex-direction: column;box-sizing: border-box;}
.section_title{height: 100rpx;border-bottom: 1px #cacaca solid;display: flex;display: -webkit-flex;align-items: center;overflow: hidden;padding: 0 15%}
.adress{color: #50585a;font-size: 32rpx;} 
.house{color: #019fe8;font-size: 32rpx;}
.priok_listlil{width: 40rpx;height: 40rpx;border-radius: 5px;overflow: hidden;float: left; margin-right: 10rpx;}
.priok_listlil image{width: 100%;height: 100%;}



.public_footer{height: 65px;position: fixed;left: 0;bottom: 300rpx;background: #fff;display: flex;display: -webkit-flex;align-items: center;justify-content: center;background: #f0f0f0;} 

.adressName{font-size: 32rpx;color: #009fea;}
.buttadd{width: 50%;height: 100rpx;line-height: 100rpx;border-radius: 25rpx;color: #019fe8;border: 2px #019fe8 solid}

.login-headers{width: 100%;height: 300rpx;display: flex;align-items: center;justify-content: center;margin-top: 200rpx} 
