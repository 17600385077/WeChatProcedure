/* 整个页面 */
.big_page {width: 100%;height: 85%;position: fixed;}
/* 圈子无信息数据 */
.no_infor {width: 100%;height: 100%;display: flex;flex-direction: column;justify-content: center;align-items: center;}
.no_bg{width: 380rpx;height: 350rpx;}
/* 顶部选择类型数量 */
.top_choose {width: 100%;height: 90rpx;border-bottom: 5rpx solid #f1f0f5;border-top: 15rpx solid #f1f0f5;}
.top_box {width: 90%;margin-left: 5%;height: 90rpx;display: flex;justify-content: space-between;line-height: 90rpx;}
/* 圈子信息列表 */
.infor_list {width: 94%;height: 100%;margin-left: 3%;overflow: hidden;margin-top: 30rpx;}
/* 群伙伴信息 */
.partner_infor{width: 100%;height: 170rpx;display: flex;justify-content: space-around;align-items: center;border-bottom: 1rpx solid #E1E1E1;}
/* 伙伴头像盒子 */
.infor_img{width: 120rpx;height: 120rpx;}
/* 群伙伴头像 */
.partner_img{width: 120rpx;height: 120rpx;border-radius: 50%;}
/* 群伙伴名公司 */
.partner_name{width: 32%;height: 110rpx;display: flex;justify-content: space-around;flex-direction: column;}
/* 群伙伴职位经验 */
.partner_post{width: 240rpx;height: 110rpx;display: flex;justify-content: space-around;flex-direction: column;text-align: right;}
.small{color: #9D9D9D;font-size: 30rpx;}
/* 类型遮罩 */
.type_shade {position: fixed;width: 100%;height: 100%;overflow: hidden;z-index: 66;background: rgba(0, 0, 0, 0.4);top: 0rpx;left: 0rpx;display: flex;flex-direction: row;justify-content: center;align-items: center;}
.type_box {width: 84%;height: 500rpx;background: white;border-radius: 25rpx;position: absolute;}
.type_box_top {width: 100%;height: 80rpx;line-height: 80rpx;text-align: center;color: #48535f;}
.close_shade {width: 50rpx;height: 50rpx;border-radius: 50%;background: #bcbbc3;text-align: center;line-height: 50rpx;color: white;position: absolute;top: 15rpx;right: 15rpx;}
.type_con {width: 90%;height: 400rpx;margin-left: 5%;display: flex;flex-direction: row;flex-wrap: wrap;}
.type_title {width: 30%;height: 50rpx;line-height: 50rpx;border: 1rpx solid #a6a3a3;font-size: 30rpx;text-align: center;margin-top: 10rpx;margin-left: 2%;border-radius: 30rpx;}



/*弹框*/
.black_overlay {position: fixed;top: 0;left:0;width: 100%;height: 100%;background-color:rgba(0, 0, 0, 0.5);z-index: 15} 
/* 授权框 */
.accreditBox{width: 550rpx;height: 460rpx;position: absolute;top: 50%;margin-top: -250rpx;left: 50%;margin-left: -270rpx;z-index: 666;background: #fff;border-radius: 25rpx;}
.topBox{height: 360rpx;width:550rpx;margin-bottom: 3rpx}
.btnBox{height: 100rpx;width:550rpx;}
.textOne{height: 110rpx;text-align:center;line-height: 110rpx;font-size: 34rpx;}
.imgBox{height: 120rpx;width: 100%;display: flex;justify-content: center;justify-items: center;}
.iconImg{width: 120rpx;height: 120rpx;border-radius: 50%}
.textTwo{width: 100%;height: 60rpx;text-align:center;line-height: 60rpx;font-size: 28rpx;}
.textThree{width: 100%;height: 60rpx;text-align:center;line-height: 60rpx;font-size: 27rpx;color: #686868}

.login-btn{width: 100%;height: 100rpx;margin: 0 auto;background: #6089f2;display: flex;justify-content: center;justify-items: center;color: #ffffff;font-size: 35rpx;border-bottom-left-radius: 25rpx;border-bottom-right-radius: 25rpx;border-top-right-radius: 0rpx;border-top-left-radius: 0rpx;}